<Window x:Class="TabletManagerWPF.View.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabletManagerWPF.View"
        mc:Ignorable="d"
        Title="ChangePassword" Height="214" Width="238">
    <Grid>
        <StackPanel>
            <GroupBox x:Name="groupBox3" Height="50" Header="Nowe hasoło" Margin="5,5,5,0" >
                <PasswordBox x:Name="NewPasswordBox" FontSize="18"  VerticalAlignment="Center"  PasswordChanged="PasswordBox_PasswordChanged" BorderBrush="{x:Null}"/>
            </GroupBox>
            <GroupBox x:Name="groupBox4" Height="50" Header="powtórz hasło" Margin="5,5,5,0" >
                <PasswordBox x:Name="ConfirmPasswordBox" FontSize="18"  BorderBrush="{x:Null}" VerticalAlignment="Center"  PasswordChanged="PasswordBox_PasswordChanged_1"/>
            </GroupBox>
            <Button Height="38" Content="Potwierdz" Style="{StaticResource ButtonStyle}" FontSize="16" Margin="5,5,5,5" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
